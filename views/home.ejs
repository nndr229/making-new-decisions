<style>
  /* Example basic styling */

  body {
    margin: 0;
    font-family: Arial, sans-serif; /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  }
  @media (max-width: 768px) {
    .carousel-inner img {
      height: 400px; /* Reduced height for mobile devices */
    }
  }
  /* NAVBAR */
  .navbar {
    background-color: #f8f8f8;
    border-bottom: 1px solid #ddd;
    padding: 1rem;
  }

  .navbar .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .navbar-brand {
    text-decoration: none;
    font-weight: bold;
    color: #333;
    font-size: 1.2rem;
  }

  .navbar-nav {
    list-style-type: none;
    display: flex;
    gap: 1rem;
    margin: 0;
    padding: 0;
  }

  .navbar-nav li a {
    text-decoration: none;
    color: #333;
    font-weight: normal;
  }

  /* HERO SECTION */
  .hero {
    background: #333 url('https://via.placeholder.com/1800x600') no-repeat cover;
    /* height: 100vh !important; */
    width: 100%;
    color: #fff;
    padding: 0 0;
    text-align: center;
    margin-top: auto;
  }

  .hero-content {
    /* max-width: 1000px;
    max-height: 500px; */
    margin: 0 auto;
  }

  .hero h1 {
    font-size: 3rem;
  }

  .hero p {
    font-size: 1.2rem;
    margin: 1rem 0 2rem 0;
  }

  .btn {
    background-color: #007bff;
    color: #fff;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 4px;
  }

  /* SECTIONS */
  .section {
    padding: 3rem 1rem;
  }

  .section h2 {
    margin-bottom: 1rem;
    text-align: center;
  }

  /* FOOTER */
  .footer {
    background-color: #f8f8f8;
    border-top: 1px solid #ddd;
    padding: 1rem 0;
    text-align: right;
  }

  .hero {
    /* width: 100%; */

    /* height: auto;
    /* Let the carousel images define the height */
    overflow: hidden; /* Ensure no scrollbars if the carousel is sized differently */
  }

  .hero-overlay {
    max-width: 700px;
    padding: 1rem;
    background-color: rgba(
      0,
      0,
      0,
      0.5
    ); /* Semi-transparent black overlay if desired */
    border-radius: 4px; /* Rounded corners, optional */
  }

  .carousel-inner img {
    width: 100%; /* Ensures the image stretches to the container's width */
    max-width: 100%; /* Prevents image from overflowing horizontally */
    height: 800px; /* Fixed height for all images (adjust as needed) */
    object-fit: cover; /* Crops the image to fill the fixed height without distorting */
  }
  @media (max-width: 300px) {
    .carousel-inner img {
      height: 400px; /* Reduced height for mobile devices */
    }
  }
</style>
<!-- Hero Section -->
<!-- Hero Section with Carousel in the background -->
<section class="hero position-relative">
  <!-- Bootstrap Carousel -->
  <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <!-- Indicators (optional) -->
    <div class="carousel-indicators">
      <button
        type="button"
        data-bs-target="#heroCarousel"
        data-bs-slide-to="0"
        class="active"
        aria-current="true"
        aria-label="Slide 1"
      ></button>
      <button
        type="button"
        data-bs-target="#heroCarousel"
        data-bs-slide-to="1"
        aria-label="Slide 2"
      ></button>
      <button
        type="button"
        data-bs-target="#heroCarousel"
        data-bs-slide-to="2"
        aria-label="Slide 3"
      ></button>
    </div>

    <!-- Carousel inner -->
    <div class="carousel-inner">
      <div class="carousel-item active">
        <!-- Add your own image source below -->
        <img src="1.webp" class="d-block w-100" alt="Slide 1" />
      </div>
      <div class="carousel-item">
        <img src="2.webp" class="d-block w-100" alt="Slide 2" />
      </div>
      <div class="carousel-item">
        <img src="3.webp" class="d-block w-100" alt="Slide 3" />
      </div>
    </div>

    <!-- Controls (optional) -->
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#heroCarousel"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#heroCarousel"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- Overlay Content -->
  <div
    class="hero-overlay position-absolute top-50 start-50 translate-middle text-center text-white"
